<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_image_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama usernya!"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/item_image_iv"
        app:layout_constraintTop_toTopOf="@id/item_image_iv"
        />

    <TextView
        android:id="@+id/item_pangkat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pangkat user!"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/item_image_iv"
        app:layout_constraintTop_toBottomOf="@id/item_name_tv"
        />

    <TextView
        android:id="@+id/item_nrp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NRP.999999"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_image_iv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>