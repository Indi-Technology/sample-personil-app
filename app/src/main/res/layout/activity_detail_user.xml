<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailUserActivity">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_iv"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginTop="54dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/detail_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="User name"
        android:textSize="18sp"
        android:textColor="#000000"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ihsanulisra Maulana"/>

    <TextView
        android:id="@+id/detail_nrp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="197dp"
        android:text="NRP. 08779012309123"
        android:textSize="12sp"
        android:textColor="#646876"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="233dp"
        android:layout_marginHorizontal="23dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/detail_jabatan_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jabatan :"
            android:textSize="12sp"
            android:textColor="#000000"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detail_jabatan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admiral"
            android:textSize="12sp"
            android:textColor="#000000"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_jabatan_title_tv" />

        <TextView
            android:id="@+id/detail_alamat_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Alamat :"
            android:textSize="12sp"
            android:textColor="#000000"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_jabatan_tv" />

        <TextView
            android:id="@+id/detail_alamat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="100dp"
            android:text="Jl. Kenangan No. 2 RT01/RW01, Sejawat,
Bekasi Barat, Bekasi"
            android:textSize="12sp"
            android:textColor="#000000"
            android:maxLines="4"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_alamat_title_tv" />

        <TextView
            android:id="@+id/detail_tgl_lahir_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tanggal Lahir :"
            android:textSize="12sp"
            android:textColor="#000000"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_alamat_tv" />

        <TextView
            android:id="@+id/detail_tgl_lahir_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Januari, 28-01-1514 SM"
            android:textSize="12sp"
            android:textColor="#000000"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_tgl_lahir_title_tv" />

        <TextView
            android:id="@+id/detail_tmpt_lahir_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tempat Lahir :"
            android:textSize="12sp"
            android:textColor="#000000"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_tgl_lahir_tv" />

        <TextView
            android:id="@+id/detail_tmpt_lahir_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="100dp"
            android:text="Jl. Kenangan No. 2 RT01/RW01, Sejawat,
Bekasi Barat, Bekasi"
            android:textSize="12sp"
            android:textColor="#000000"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_tmpt_lahir_title_tv" />

        <TextView
            android:id="@+id/detail_status_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tempat Lahir :"
            android:textSize="12sp"
            android:textColor="#000000"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_tmpt_lahir_tv" />

        <TextView
            android:id="@+id/detail_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jones"
            android:textSize="12sp"
            android:textColor="#000000"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_status_title_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/detail_edit_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_marginStart="23dp"
        android:backgroundTint="#FFFFFF"
        android:text="Edit"
        android:textColor="#525252"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detail_delete_btn"/>

    <Button
        android:id="@+id/detail_delete_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_marginStart="187dp"
        android:backgroundTint="#D60000"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/detail_edit_btn"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>